FROM golang:1.21-alpine

RUN apk add --no-cache git

WORKDIR /app

# Copy go mod files first for better caching
COPY go.mod go.sum ./
RUN go mod download

# Copy the rest of the source code
COPY . .

# Default command runs all tests including e2e
CMD ["sh", "-c", "go test ${GO_TEST_FLAGS:-'-v'} -tags=e2e ./..."]
